{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2015"
    ],
    "outDir": "lib/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
